<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备" />

        <Button
            android:id="@+id/btn_activate_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="激活设备" />

        <Button
            android:id="@+id/btn_active_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="获取激活状态" />

        <Button
            android:id="@+id/btn_active_status_outdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="监听激活过期" />


        <TextView
            android:id="@+id/title_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="微信账号" />

        <Button
            android:id="@+id/btn_authorize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="扫码登录" />

        <Button
            android:id="@+id/btn_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="获取登陆用户信息" />

        <Button
            android:id="@+id/btn_authorize_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="获取登录状态" />

        <Button
            android:id="@+id/btn_authorize_status_v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="获取登录状态(v1)" />


        <Button
            android:id="@+id/btn_de_authorize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="退出登录" />

        <TextView
            android:id="@+id/title_miniprogram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="小程序" />

        <Button
            android:id="@+id/btn_preload_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="预加载小程序环境" />

        <Button
            android:id="@+id/btn_launch_wxa_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="启动小程序" />

        <Button
            android:id="@+id/btn_launch_wxa_app_by_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="扫码启动小程序" />

        <Button
            android:id="@+id/btn_launch_wxa_app_by_scan_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="扫码启动小程序（自定义扫码页面）" />

        <Button
            android:id="@+id/btn_close_wxa_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="关闭小程序" />

        <TextView
            android:id="@+id/title_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="背景音频" />

        <Button
            android:id="@+id/btn_manage_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="管理背景音频" />

        <Button
            android:id="@+id/btn_notify_manage_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="监听背景音频" />

        <TextView
            android:id="@+id/title_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="UI 界面" />

        <Button
            android:id="@+id/btn_ui_zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="小程序视图缩放设置" />
    </LinearLayout>
</ScrollView>